{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MLoader",
  "version": "1.0.0",
  "identifier": "ru.mentola.loader",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MLoader",
        "width": 800,
        "height": 600,
        "maxWidth": 800,
        "maxHeight": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "maximizable": false,
        "decorations": false,
        "center": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  }
}
